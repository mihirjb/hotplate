<!DOCTYPE html>
<html>
<head>
  <title>Hotplate</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application"  %>
		<link href="http://code.jquery.com/ui/1.9.1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
		<script type="text/javascript" src="http://code.jquery.com/jquery-1.8.2.js"></script>
		<script type="text/javascript" src="http://code.jquery.com/ui/1.9.1/jquery-ui.js"></script>
		<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.js"></script>
		<%= javascript_tag "var autocomplete_items = #{ @suggestions };" %>

		<script type="text/javascript">
		           jQuery(document).ready(function() {
		               $('.typeahead').typeahead({source: autocomplete_items});
		           });
		</script>
	
  <%= csrf_meta_tags %>
</head>
<body>
	
	<header>	
		<div class="navbar">
			<div class="navbar-inner">
				<ul class="nav">
				<% if user_signed_in? %>
				<li><%= link_to "Home", root_path %></li>
					<li><%= link_to "#{current_user.userfullname}", edit_user_registration_path %></li>
					<li><%= link_to "Order History", "/pages/transactionhistory" %></li>
					
			<li></li>  
			<li style= "float:right"><%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %></li>
			<% else %>
			<li><%= link_to "Home", root_path %></li>
			<li><%= link_to "Sign in ", new_user_session_path %><li>
		<% end %>
		</ul>	
	
		<%= form_tag root_path ,:class=>"navbar-form", :method => 'get' do %>
		  <p>
			<%= text_field_tag :searchquery, "Search for restaurants, dishes, area etc", :onfocus => "$(this).val('')", :onblur => "$(this).val('Search for restaurants, dishes, area etc')",:class=>"searchqueryfield typeahead"  %>
		    <%= submit_tag "Search", :name => nil, :class => "btn btn-success" %>
		  </p>
		<% end %>
		
		</div>
		</div>
		</header>
	
<div class="container">
<%= yield %>
</div>

</body>
</html>
