	<%= form_for :review, :url => "/reviews" do |ff| -%>

		<div class="field">
			<%= ff.label :title, "Review Title" %>
			<%= ff.text_field :title %>
		</div>  

			<div class="field">
				<%= ff.label :reviewtext, "Review" %>
				<%= ff.text_field :reviewtext %>
			</div>
				<div class="field">
				<%= ff.submit "Add Review", :disable_with => 'Adding...', :class =>"btn btn-success" %>
				</div>
	<% end %>
